<Window x:Class="WpfClient.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="Авторизация" Height="298" Width="500" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <Grid>
        <Label Content="Введите ваше имя" Margin="140,40,140,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="AuthTextBox" Margin="55,118,55,0" Text="" TextWrapping="Wrap" FontSize="16" Height="24" VerticalAlignment="Top"/>
        <Button x:Name="AuthButtom" Content="Войти" Margin="192,193,192,28" FontSize="18" FontWeight="Bold" Click="Button_Click"/>
        <Label x:Name="ErrorLabel" Visibility="Hidden" Content="ERROR" Margin="162,156,162,0" Height="28" VerticalAlignment="Top" Foreground="Red"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="500,161,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
